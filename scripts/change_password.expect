#!/usr/bin/expect -f

set lastPassword [lindex $argv 0];
set newPassword [lindex $argv 1];
set databaseName [lindex $argv 2]

set timeout -1

spawn mysql -uroot -p${lastPassword}
expect "mysql>"
send "SET PASSWORD = PASSWORD(${newPassword});\r"

expect "mysql>"
send "CREATE DATABASE ${databaseName};\r"


expect "mysql>"
send "quit\r" 
